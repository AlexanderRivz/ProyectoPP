<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            app:cardCornerRadius="5dp"
            android:elevation="10dp"
            app:cardElevation="10dp"
            android:id="@+id/producto_card_view">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:orientation="vertical"
                android:padding="10dp">

                <TextView
                    android:id="@+id/nombreentregausuario_textview"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:text="@string/placeholder"
                    android:textSize="20sp"
                    android:textColor="@android:color/black"
                    android:gravity="center_vertical"/>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textSize="16sp"
                        android:text="Id Usuario:"
                        android:layout_margin="4dp"
                        android:paddingBottom="5dp"
                        android:gravity="center"
                        android:paddingTop="5dp"/>
                    <TextView
                        android:id="@+id/idusuarioentrega_textview"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textSize="16sp"
                        android:text="@string/placeholder"
                        android:layout_margin="4dp"
                        android:paddingBottom="5dp"
                        android:gravity="center"
                        android:paddingTop="5dp"/>
                    <Space
                        android:layout_width="20dp"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textSize="16sp"
                        android:text="Id entrega:"
                        android:layout_margin="4dp"
                        android:paddingBottom="5dp"
                        android:gravity="center"
                        android:paddingTop="5dp"/>
                    <TextView
                        android:id="@+id/identrega_textview"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textSize="16sp"
                        android:text="@string/placeholder"
                        android:layout_margin="4dp"
                        android:paddingBottom="5dp"
                        android:gravity="center"
                        android:paddingTop="5dp"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textSize="16sp"
                        android:text="Costo:"
                        android:layout_margin="4dp"
                        android:paddingBottom="5dp"
                        android:gravity="center"
                        android:paddingTop="5dp"/>
                    <TextView
                        android:id="@+id/costototalarticulos_textview"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textSize="16sp"
                        android:text="@string/placeholder"
                        android:layout_margin="4dp"
                        android:paddingBottom="5dp"
                        android:gravity="center"
                        android:paddingTop="5dp"
                        android:drawableStart="@drawable/ic_attach_money_black_24dp"/>
                    <Space
                        android:layout_width="20dp"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.5"
                        android:textSize="16sp"
                        android:text="Cantidad articulos:"
                        android:layout_margin="4dp"
                        android:paddingBottom="5dp"
                        android:gravity="center"
                        android:paddingTop="5dp"/>
                    <TextView
                        android:id="@+id/cantidadarticulosrepartidor_textView"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight=".5"
                        android:textSize="16sp"
                        android:text="@string/placeholder"
                        android:layout_margin="4dp"
                        android:paddingBottom="5dp"
                        android:gravity="center"
                        android:paddingTop="5dp"/>

                </LinearLayout>


                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@android:color/darker_gray"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="5dp">
                    <Button
                        android:id="@+id/terminado_button"
                        android:layout_width="0dp"
                        android:layout_height="40dp"
                        android:layout_weight="1"
                        android:background="@drawable/ripple_effect"
                        android:text="Completar Entrega"
                        android:textColor="@android:color/white"/>

                    <Space
                        android:layout_width="40dp"
                        android:layout_height="wrap_content"/>

                    <Button
                        android:id="@+id/locacion_button"
                        android:layout_width="0dp"
                        android:layout_height="40dp"
                        android:layout_weight="1"
                        android:background="@drawable/ripple_effect"
                        android:text="Ver ubicacion"
                        android:textColor="@android:color/white"/>

                </LinearLayout>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/informacioncompra_recyclerview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>